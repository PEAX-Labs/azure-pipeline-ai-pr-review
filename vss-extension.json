{
    "manifestVersion": 1,
    "id": "SmartCodeReviewer",
    "name": "Smart Code Reviewer",
    "version": "1.0.0",
    "publisher": "PEAX-Labs",
    "public": false,
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "An intelligent AI-powered task that provides comprehensive code reviews for Pull Requests using advanced language models",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "tags": [
        "AI",
        "code-review",
        "pull-request",
        "quality",
        "automation",
        "openai",
        "gpt"
    ],
    "files": [
        {
            "path": "SmartCodeReviewer"
        }
    ],
    "repository" : {
        "type" : "git",
        "uri" : "https://github.com/PEAX-Labs/azure-pipeline-ai-pr-review"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "contributions": [
        {
            "id": "SmartCodeReviewer",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "SmartCodeReviewer"
            }
        }
    ]
}